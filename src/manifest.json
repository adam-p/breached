{
  "name": "Breached",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Indicates if the current website has been breached in the past. Uses haveibeenpwned.com",
  "homepage_url": "https://github.com/adam-p/breached",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "vendor/jquery-3.2.1.min.js",
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Breached?",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "storage", "tabs"
  ]
}